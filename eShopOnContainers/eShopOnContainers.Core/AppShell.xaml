<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:eShopOnContainers.Core.Views"
    xmlns:local="clr-namespace:eShopOnContainers.Core.Views"
    x:Class="eShopOnContainers.Core.AppShell">




    <FlyoutItem Title="Anasayfa" Icon="home.png">
        <ShellContent Route="PageMain" ContentTemplate="{DataTemplate local:PageMain}" />
    </FlyoutItem>
    <FlyoutItem Title="Giriş Yap / Üye Ol" Icon="user.png">
        <ShellContent Route="PageGiris" ContentTemplate="{DataTemplate local:PageGiris}" />
    </FlyoutItem>
    <FlyoutItem Title="Sepet" Icon="cart.png">
        <ShellContent Route="PageSepet" ContentTemplate="{DataTemplate local:PageSepet}" />
    </FlyoutItem>
    <FlyoutItem Title="Tüm Ürünler" Icon="star.png" >
        <ShellContent Route="PageTumUrunler" ContentTemplate="{DataTemplate local:PageTumUrunler}" />
    </FlyoutItem>
    <FlyoutItem Title="Kategoriler"  Icon="menu.png">
        <ShellContent Route="PageCategory" ContentTemplate="{DataTemplate local:PageCategory}" />
    </FlyoutItem>
    <FlyoutItem >
        <ShellContent ContentTemplate="{DataTemplate views:PageLogin}" Route="PageLogin" Icon="user.png"/>
    </FlyoutItem>
</Shell>
